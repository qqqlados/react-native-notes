{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/assets/*": ["./assets/*"],
			"@/types/*": ["./types/*"],
			"@/store/*": ["./store/*"],
			"@/components/*": ["./components/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/constants/*": ["./constants/*"],
			"@/utils/*": ["./utils/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
